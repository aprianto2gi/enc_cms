        <!-- form start -->
        <form role="form" method="POST" action="/admin/add_product" enctype="multipart/form-data">
          <div class="card-body">
            <div class="form-group">
              <label for="nama_produk">Nama Produk</label>
              <input type="text" class="form-control" name="nama" id="nama_produk">
